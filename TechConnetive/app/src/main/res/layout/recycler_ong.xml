<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ongClickEvents"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="15dp">

        <ImageView
            android:id="@+id/txt_icon"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:gravity="center"
            android:src="@drawable/latter_b" />

        <TextView
            android:id="@+id/tv_nome_ong"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/txt_icon"
            android:layout_marginStart="16dp"
            android:layout_toEndOf="@id/txt_icon"
            android:text="Nome Ong"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/txt_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_nome_ong"
            android:layout_alignStart="@id/tv_nome_ong"
            android:ellipsize="marquee"
            android:singleLine="true"
            android:text="Descricao"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/txt_km"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_desc"
            android:layout_alignStart="@id/tv_nome_ong"
            android:layout_marginEnd="20dp"
            android:drawableEnd="@drawable/ic_add_location"
            android:drawableTint="#ACACAB"
            android:ellipsize="marquee"
            android:singleLine="true"
            android:text="1.5km"
            android:textSize="15dp" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentEnd="true"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:src="@drawable/ic_next" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>