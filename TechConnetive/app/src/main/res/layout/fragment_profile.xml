<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/profile_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileFragment">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="105dp"
        android:background="#f8f8"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp">

            <ImageView
                android:id="@+id/txt_icon"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/cyrcler_profile"
                android:gravity="center"
                android:src="@drawable/logo" />

            <TextView
                android:id="@+id/txt_user"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/txt_icon"
                android:layout_marginStart="16dp"
                android:layout_toEndOf="@id/txt_icon"
                android:text="Fulano Beltrano"
                android:textSize="18dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_hora"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_user"
                android:layout_alignStart="@id/txt_user"
                android:ellipsize="marquee"
                android:singleLine="true"
                android:text="Editar perfil"
                android:textSize="15dp" />

            <ImageView
                android:id="@+id/txt_enter"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentEnd="true"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:src="@drawable/ic_next" />

        </RelativeLayout>

    </com.google.android.material.appbar.AppBarLayout>


    <ActionMenuView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        
    </ActionMenuView>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/app_bar_layout"
        android:layout_marginStart="16dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp">

        <ImageView
            android:id="@+id/txt_icon_notify"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:gravity="center"
            android:src="@drawable/ic_notification" />

        <TextView
            android:id="@+id/txt_notify"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/txt_icon_notify"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@id/txt_icon_notify"
            android:text="Notificações"
            android:textSize="18dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_notify"
            android:layout_alignStart="@id/txt_notify"
            android:ellipsize="marquee"
            android:singleLine="true"
            android:text="Como deseja receber as notificações?"
            android:textSize="15dp" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentEnd="true"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:src="@drawable/ic_next" />

    </RelativeLayout>

</RelativeLayout>