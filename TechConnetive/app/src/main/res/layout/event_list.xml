<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/cardview_bg"
    tools:showIn="@layout/fragment_home"
    app:cardCornerRadius="10dp"
    android:layout_margin="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp">

        <ImageView
            android:id="@+id/txt_icon"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/cyrcler"
            android:gravity="center"
            android:src="@drawable/latter_b" />

        <TextView
            android:id="@+id/txt_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/txt_icon"
            android:layout_marginStart="16dp"
            android:layout_toEndOf="@id/txt_icon"
            android:text="Macarronada da Ong CIVE"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/txt_hora"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_user"
            android:layout_alignStart="@id/txt_user"
            android:ellipsize="marquee"
            android:singleLine="true"
            android:text="11hrs - 16hrs"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/txt_data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_hora"
            android:layout_alignStart="@id/txt_user"
            android:layout_marginEnd="20dp"
            android:ellipsize="marquee"
            android:singleLine="true"
            android:text="Domingo - 15/04/2020"
            android:textSize="15dp" />

        <ImageView
            android:id="@+id/txt_enter"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerInParent="true"
            android:layout_alignParentEnd="true"
            android:gravity="center"
            android:src="@drawable/ic_next" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>