<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FormDonateActivity">

    <LinearLayout
        android:id="@+id/app_bar_layout2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:elevation="1dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/return_donate"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:background="@drawable/ic_back"
            android:backgroundTint="#fff" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="fill_vertical"
            android:paddingStart="60dp"
            android:text="Formulário de doação"
            android:textColor="#fff"
            android:textSize="20dp" />

    </LinearLayout>

    <View
        android:layout_width="453dp"
        android:layout_height="350dp"
        android:layout_marginLeft="-22dp"
        android:layout_marginTop="-80dp"
        android:layout_marginRight="-22dp"
        android:background="@drawable/shadow_header" />

    <View
        android:id="@+id/image_background"
        android:layout_width="453dp"
        android:layout_height="350dp"
        android:layout_marginLeft="-22dp"
        android:layout_marginTop="-84dp"
        android:layout_marginRight="-22dp"
        android:background="@drawable/header">

    </View>

    <TextView
        android:id="@+id/txt_intro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/app_bar_layout2"
        android:layout_centerInParent="true"
        android:layout_marginTop="5dp"
        android:text="Doando para:"
        android:textColor="#fff"
        android:textSize="20sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/iv_ong"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@+id/txt_intro"
        android:layout_centerInParent="true"
        android:layout_marginTop="20dp" />

    <TextView
        android:id="@+id/txt_nome_ong"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_ong"
        android:layout_centerInParent="true"
        android:layout_marginTop="10dp"
        android:textColor="#fff"
        android:textSize="20dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/image_background"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:padding="12dp">

        <TextView
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Atenção: os campos marcados com * são obrigatórios."
            android:textSize="15dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp">

            <EditText
                android:id="@+id/et_type"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:background="@drawable/et_valid"
                android:hint="Tipo" />

            <EditText
                android:id="@+id/et_what"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="@drawable/et_valid"
                android:hint="* Descrição" />
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp">

            <EditText
                android:id="@+id/et_quant"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:background="@drawable/et_valid"
                android:hint="* Quantidade"
                android:inputType="number" />

            <TextView
                android:id="@+id/et_validate"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="@drawable/et_valid"
                android:drawableEnd="@drawable/ic_calendary"
                android:gravity="center"
                android:hint="Validade"
                android:paddingStart="-55dp"
                android:textSize="17dp"
                android:theme="@style/AppTheme" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp">

            <EditText
                android:id="@+id/et_coments"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@drawable/et_valid"
                android:gravity="left"
                android:hint="Comentar" />

        </RelativeLayout>

        <Button
            android:id="@+id/concluir_doacao"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:background="@drawable/button_background"
            android:gravity="center"
            android:text="Concluir" />

    </LinearLayout>

</RelativeLayout>